@using SpotifyAPI.Web
@using System.Text.RegularExpressions
@{
    ViewData["Title"] = "Track";
    var lines =  Regex.Split(Model.Text, @"(?<!^)(?=[A-Z])");

}
@model Track


@foreach (var item in lines)
{
    if (Regex.Match(item, @"\.*?\]").Success)
    {
        <br/>
    }
    <p style="margin: 0">@item</p>
    if (Regex.Match(item, @"\.*?\]").Success)
    {
        <br/>
    }
}

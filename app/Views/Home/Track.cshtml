@using SpotifyAPI.Web
@using System.Text.RegularExpressions

@model Track
@{
	ViewData["Title"] = "Track";
}

<h1>Paroles de @Model.Name par @Model.Album.Artist.Name dans l'album @Model.Album.Name</h1>

<section id="track">
	@foreach (var item in Model.Text)
	{
		<h2>@item.Item1</h2>
		foreach (var line in Regex.Split(item.Item2, "(?<=[a-z])(?=[A-Z])"))
		{
			<p class="@(Regex.IsMatch(line, @"\[.*\]") ? "music-section" : "")">@line</p>
		}
	}
</section>


@section Styles{
		<link rel="stylesheet" href="~/css/track.css" asp-append-version="true" />
}